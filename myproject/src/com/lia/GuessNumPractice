package com.lia;

import java.util.Scanner;

public class GuessNumPractice {

	
	public static void main(String[] args) {
    	int max = 100, min = 0, guess;
    	int answer;
    	answer = (int)(Math.random()*100 + 1);
    	Scanner scanner = new Scanner(System.in);

    	while (true) {
         	System.out.print("Please input a number: ");
         	guess = scanner.nextInt();

        if (guess == answer){
        	System.out.println("You are right! Congrats!");
        	break; 
        }
        
        else if (guess < answer) {
        	System.out.println("Please input a lager number");
        	System.out.println(guess + "~" + max);
        	scanner.nextLine();
        	min = guess;
                
        }
        
        else if (guess > answer){
        	System.out.println("Please input a small number");
        	System.out.println( min + "~" + guess);
        	scanner.nextLine();
        	max = guess;
                
            }
        }
    }

}
